        const changeBG=(colorBg)=>{
            document.body.style.background=colorBg;
            let txt=document.getElementsByClassName("txt");
            if(colorBg == 'rgb(0, 0, 0)'){
                for(let elm of txt){
                    elm.style.color='rgb(243, 205, 205)';
