<!DOCTYPE html>
<html lang="en">
<head>
    {{>link}}
    {{>style}}

    <style>
        body{
            background-color: rgb(255, 210, 127);
        }
        #container1{
            background-color: rgb(77, 231, 103);
        }
        input{
            width: 100%;
            height: 1.3em;
            text-align: center;
            margin-top: 10px;
            font-size: 30px;
            font-weight: bold;
            color: blueviolet;
            background-color: rgba(52, 41, 212, 0.479);
        }
        label{
            font-size: 20px;
            color: blueviolet;
            font-weight: bold;
        }
        h1{
            background-color: rgba(65, 51, 192, 0.637);
            color: rgba(26, 11, 240, 0.726) ;
            text-align: center;
        }
    </style>
</head>
<body>
    {{>header}}
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-md-8 col-12 mx-auto">
                <h1>Temperature Converter</h1>
                <div id="container1">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-5 col-12 mx-auto mb-5">
                                <div class="input mx-auto">
                                    <label for="">Celsius</label><br>
                                    <input type="number" value="0" class="inp" id="cel">
                                </div>
                            </div>
                            <div class="col-md-5 col-12 mx-auto mb-5">
                                <div class="input mx-auto">
                                    <label for="">Fahrenheit</label><br>    
                                    <input type="number" value="32" id="far" class="inp">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    {{>footer}}
    <script>
        let cel=document.getElementById("cel");
        let far=document.getElementById("far");
        cel.addEventListener('input',function(){
            let c=this.value;
            let f= (c*9/5)+32;
            if(!Number.isInteger(f)){
                f=f.toFixed(4)
            }
            far.value=f;
        });
        far.addEventListener('input',function(){
            let f=this.value;
            let c=(f-32)*5/9;
            if(!Number.isInteger(c)){
                c=c.toFixed(4)
            }
            cel.value=c;
        });
    </script>    
</body>
</html>