<!DOCTYPE html>
<html lang="en">
<head>
    {{>link}}
    {{>style}}<style>
        
        #w-c h1{
            text-align: center;
            background-color: blue;
            color: beige;
            padding: 10px;
            margin: 0px;
        }
        #w-c textarea{
            width: 99.55%;
            height: 400px;
            border-color: rgb(30, 16, 231);
            margin: 0px;
            font-size: 25px;
        }
        #w-c p{
            text-align: center;
            background-color: rgb(34, 31, 218);
            font-size: 25px;
            font-weight: bold;
            color: azure;
            padding: 15px;
            margin: 0px;
        }
        @media (max-width: 500px) {
            h1{
                text-align: center;
                background-color: blue;
                color: beige;
                margin: 0px;
                font-size: 17px;
            }
            textarea{
                width: 99.55%;
                height: 200px;
                border-color: rgb(30, 16, 231);
                margin: 0px;
                font-size: 25px;               
            }
             p{
                text-align: center;
                background-color: rgb(34, 31, 218);
                font-size: 15px;
                font-weight: bold;
                color: azure;
                margin: 0px;
                padding:3px;
            }
        }
    </style>
</head>
<body>
    {{>header}}
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto" id="w-c">
                <h1>Word and character counter</h1>
                <textarea name="textbox" id="" cols="30" rows="10"></textarea>
                <p>
                    <span id="word">0</span> words and 
                    <span id="char">0</span> characters   
                </p>
            </div>
        </div>
    </div>
    <script>
        let textbox=document.querySelector("textarea")
        textbox.addEventListener('input',function(){
            let text=this.value;
            console.log(text)
            document.getElementById("char").innerHTML=text.length;
            text=text.trim()
            let word=text.split(" ");
            word=word.filter(function(elm){
                return elm!="";
            })
            document.getElementById("word").innerHTML=word.length;
        });
    </script>
